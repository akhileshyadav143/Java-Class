class Book{
    void read(){
        System.out.println("reading a book");
    }
}
class novel extends Book{
    void storyline(){
        System.out.println("the novel has an interesting storyline");
    }
}
public class main{
    public static void main(String[] args){
        novel n = new novel();
        n.read();
        n.storyline();
    }
}